                </StackLayout>
                <Label Grid.Row="0" Grid.Column="1" FontFamily="Roboto" FontSize="24" HorizontalOptions="StartAndExpand" HorizontalTextAlignment="Start" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}" Text="{translator:Translate EducationalString}" TextColor="White" VerticalTextAlignment="Center" />
            </StackLayout>

            <StackLayout Padding="5,10" VerticalOptions="FillAndExpand">
